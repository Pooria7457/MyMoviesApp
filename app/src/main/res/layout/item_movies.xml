<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    android:elevation="8dp"
    android:layoutDirection="ltr">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_ItemMovies_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="4dp"
                android:text="Film Title"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/img_ItemMovies_Poster"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_ItemMovies_Title"
                android:layout_margin="4dp"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/txt_ItemMovies_Country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_ItemMovies_Title"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="36dp"
                android:layout_toRightOf="@id/img_ItemMovies_Poster"
                android:text="country" />

            <TextView
                android:id="@+id/txt_ItemMovies_Year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/img_ItemMovies_Poster"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="36dp"
                android:layout_toRightOf="@id/img_ItemMovies_Poster"
                android:text="year" />

        </RelativeLayout>


</androidx.cardview.widget.CardView>